@page "/api/TDocumentos"
@inject IHttpService http


<h3>Lista de tipos de documentos</h3>

<table class="table table-striped">

    <tr>
        <th>Codigo</th>
        <th>Nombre</th>
    </tr>
    @if (Msg == "")
    {
        @if (listaDocumentos == null)
        {
            <p>Buscando....</p>
        }
        else if (listaDocumentos.Count == 0)
        {
            <p>No existen tipos de documentos</p>
        }
        else
        {
            @foreach (var item in listaDocumentos)
            {
                <tr>
                    <td>@item.Codigo</td>
                    <td>@item.Nombre</td>
                    <td>
                        <a class="btn btn-primary"
                           href="api/TDocumentos/editar/@item.Id">
                            Editar
                        </a>
                    </td>
                    <td>
                        <button class="btn btn-danger">
                            Borrar
                        </button>
                    </td>
                </tr>
            }
        }
    }
    else
    {
        <p> Error: @Msg</p>
    }

</table>

@code {
    List<TDocumento> listaDocumentos = new List<TDocumento>();
    public string Msg = "";
    protected override async Task OnInitializedAsync(){
        await base.OnInitializedAsync();
        await Leer();
    }

    private async Task Leer(){
        var respuesta = await http.Get<List<TDocumento>>("api/TDocumentos");
        if(!respuesta.Error){
            listaDocumentos = respuesta.Response;
        }else{
            Msg = "Error";
        }
    }
}
